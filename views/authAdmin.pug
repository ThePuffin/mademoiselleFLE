doctype html
html
    head
        title= "BackOffice Example"
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css')
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css")
        link(rel="stylesheet", href="/stylesheets/main.css")
        link(rel="stylesheet", href="/stylesheets/back/authAdmin.css")

    body
        #authAdmin
            .container-fluid
                if message.length > 0
                    p.alert.alert-danger.alert-dismissible.fade.show(role='alert')=message
                        button.close(type='button', data-dismiss='alert', aria-label='Close')
                            span(aria-hidden='true') ×
                .row
                    .col-md-4.offset-md-4
                        img.logo(src="/uploads/logoMlleFle.png", alt="Logo du site Mademoiselle FLE")
                        h3 Se connecter
                        form(method="POST", action="/admin/login")
                            input.form-control(type="text", name="email", placeholder="Votre adresse email")
                            input.form-control(type="text", name="password", placeholder="Votre mot de passe")
                            a.MdpSmall(href='/#') Mot de passe oublié ?
                            button.btn.btn-info.float-right(type="submit" value="Log In") Se connecter

            script(defer src="https://use.fontawesome.com/releases/v5.0.10/js/all.js" integrity="sha384-slN8GvtUJGnv6ca26v8EzVaR9DC58QEwsIk9q1QXdCU8Yu8ck/tL/5szYlBbqmS+" crossorigin="anonymous")
            script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
            script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js', integrity='sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ', crossorigin='anonymous')
            script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js', integrity='sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm', crossorigin='anonymous')